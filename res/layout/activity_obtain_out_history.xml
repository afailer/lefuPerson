<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lefu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x12"
        android:paddingBottom="@dimen/x12"
        >
        <com.lefuyun.widget.CircleImageView
            android:id="@+id/img_elder_obtain_out_history_activity"
	        android:layout_width="@dimen/x30"
		    android:layout_height="@dimen/x30"
		    android:layout_marginLeft="@dimen/x17"
		    android:layout_centerVertical="true"
		    android:src="@drawable/default_img"
		    lefu:civ_border_width="@dimen/x1"
   			lefu:civ_border_color="@color/white"
	        />
        
        <TextView 
            android:id="@+id/name_elder_obtain_out_history_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_elder_obtain_out_history_activity"
            android:layout_marginLeft="@dimen/x10"
            android:layout_centerVertical="true"
            android:text="赖荣生"
            android:textSize="@dimen/text_size_18"
            android:textColor="#3C4350"
            />
        
        <TextView 
            android:id="@+id/time_elder_obtain_out_history_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x13"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_12"
            android:textColor="#9DA1A7"
            />
    </RelativeLayout>
    
    <!-- 导航标题栏 -->
    <com.lefuyun.widget.PagerSlidingTabStrip
        android:id="@+id/pager_tabstrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sliding_tab_strip_background"
        lefu:allowWidthFull="true"
        lefu:slidingBlock="@drawable/image_sliding_block" >
    </com.lefuyun.widget.PagerSlidingTabStrip>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </android.support.v4.view.ViewPager>
    

</LinearLayout>
