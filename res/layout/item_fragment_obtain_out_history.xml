<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
     >
     <RelativeLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:paddingTop="@dimen/x14"
         >
         <TextView 
             android:id="@+id/date_item_obtain_out_history_fragment"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/x17"
             android:textSize="@dimen/text_size_14"
             android:textColor="@color/main_text"
             />
         
         <TextView 
             android:id="@+id/time_item_obtain_out_history_fragment"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_marginRight="@dimen/x20"
             android:textSize="@dimen/text_size_14"
             android:textColor="#323331"
             />
         
         <TextView 
             android:id="@+id/state_item_obtain_out_history_fragment"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/x32"
             android:layout_alignParentRight="true"
             android:layout_marginRight="@dimen/x60"
             android:textSize="@dimen/text_size_15"
             android:textColor="@color/main_text"
             />
         
     </RelativeLayout>
     
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:paddingTop="@dimen/x10"
         android:paddingBottom="@dimen/x10"
         android:gravity="center_vertical"
         android:orientation="horizontal"
         >
         <TextView 
             android:id="@+id/elder_item_obtain_out_history_fragment"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/x17"
             android:textSize="@dimen/text_size_18"
             android:textColor="#3c4350"
             />
         
         <TextView 
             android:id="@+id/details_item_obtain_out_history_fragment"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="@dimen/x14"
             android:layout_marginLeft="@dimen/x18"
             android:maxLines="2"
             android:textSize="@dimen/text_size_14"
             android:textColor="#9DA1A7"
             />
         
     </LinearLayout>

</LinearLayout>
