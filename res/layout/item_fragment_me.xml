<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_me_fragment"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    
    <RelativeLayout 
        android:id="@+id/item_me_fragment"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x45"
        android:layout_marginLeft="@dimen/x36"
        >
        <TextView 
            android:id="@+id/title_item_me_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/normal_string"
            android:textSize="@dimen/text_size_17"
            />
        <TextView 
            android:id="@+id/version_item_me_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x6"
            android:layout_toRightOf="@id/title_item_me_fragment"
            android:textSize="@dimen/text_size_15"
            android:textColor="#B7B8BA"
            />
        
        <ImageView 
            android:id="@+id/img_item_me_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:layout_centerVertical="true"
            android:contentDescription="@string/normal_picture_string"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x17"
            />
        
    </RelativeLayout>
    <View 
        android:id="@+id/line_item_me_fragment"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x1"
        android:background="#c8c7cc"
        android:layout_marginLeft="@dimen/x36"
        android:layout_below="@id/item_me_fragment"
        />
    
</RelativeLayout>
