<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关注成功"
            android:drawableTop="@drawable/success_tick"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/main_text"
            />
        
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_concern_elder_activity_success"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:layout_marginTop="@dimen/x36"
        android:layout_marginBottom="@dimen/x120"
        android:background="@drawable/selector_button_radius_maincolor_gray"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/x9"
        android:paddingTop="@dimen/x9"
        android:text="前往主页面"
        android:textColor="@color/selector_button_text_white_maincolor"
        android:textSize="@dimen/text_size_18" />

</LinearLayout>