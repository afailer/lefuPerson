<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <GridView 
        android:id="@+id/gv_concern_elder_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:descendantFocusability="blocksDescendants"
        ></GridView>
    
    <TextView 
        android:id="@+id/btn_elder_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x26"
        android:background="@drawable/selector_button_radius_maincolor_gray"
        android:paddingLeft="@dimen/x60"
        android:paddingRight="@dimen/x60"
        android:paddingTop="@dimen/x8"
        android:paddingBottom="@dimen/x8"
        android:layout_marginBottom="@dimen/x57"
        android:text="添加关注"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/selector_button_text_white_maincolor"
        />

</LinearLayout>
