<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x111"
        android:layout_gravity="center_horizontal"
        android:text="乐福健康"
        android:textSize="@dimen/text_size_48"
        android:textColor="@color/main_text"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="l e f u  h e a l t h"
        android:textSize="@dimen/text_size_13"
        android:textColor="#d4d4d4"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/x44"
        android:layout_marginTop="@dimen/x62"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:background="#F4F4F4"
        android:orientation="horizontal"
        >
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/x15"
	        android:layout_gravity="center_vertical"
	        android:text="+86"
	        android:textSize="@dimen/text_size_14"
	        android:textColor="@color/main_text"
	        />
        
        <View 
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:layout_marginLeft="@dimen/x9"
            />
        
        <EditText 
            android:id="@+id/phone_login_sms_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入您的手机号"
            android:inputType="phone"
            android:background="@null"
            android:layout_marginLeft="@dimen/x9"
            android:textColorHint="#CCCCD0"
            android:textColor="@color/main_text"
            android:textSize="@dimen/text_size_14"
            android:maxLength="13"
            />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x44"
        android:layout_marginTop="@dimen/x11"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:orientation="horizontal"
        >
        <EditText 
	        android:id="@+id/verify_code_login_sms_activity"
		    android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:inputType="number"
	        android:paddingLeft="@dimen/x21"
	        android:background="#F4F4F4"
		    android:hint="请输入验证码"
		    android:textColorHint="#CCCCD0"
		    android:textColor="@color/main_text"
		    android:textSize="@dimen/text_size_14"
		    />
        
        <TextView 
            android:id="@+id/send_verify_code_login_sms_activity"
            android:layout_width="@dimen/x100"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x4"
            android:paddingLeft="@dimen/x8"
            android:paddingRight="@dimen/x8"
            android:background="@drawable/selector_button_gray_maincolor"
            android:text="获取验证码"
            android:textColor="@color/selector_button_text_maincolor_white"
		    android:textSize="@dimen/text_size_14"
            />
            
        
    </LinearLayout>
    
    <TextView 
        android:id="@+id/button_login_sms_activity"
	    android:layout_width="match_parent"
        android:layout_height="@dimen/x44"
        android:layout_marginTop="@dimen/x36"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:gravity="center"
        android:background="@drawable/selector_button_radius_maincolor_gray"
	    android:text="登录"
	    android:textColor="@color/selector_button_text_white_maincolor"
	    android:textSize="@dimen/text_size_18"
	    />
    
    <TextView 
        android:id="@+id/other_login_sms_activity"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x18"
	    android:text="使用密码登录"
	    android:textColor="@color/main_text"
	    android:textSize="@dimen/text_size_14"
	    />
 

</LinearLayout>