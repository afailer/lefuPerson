<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lefu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <com.lefuyun.widget.CircleImageView
        android:id="@+id/img_user_info_activity"
        android:layout_width="@dimen/x104"
	    android:layout_height="@dimen/x104"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="@dimen/x28"
	    android:src="@drawable/default_img"
	    lefu:civ_border_width="@dimen/x3"
  		lefu:civ_border_color="#CCCCD0"
        />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x12"
        android:text="点击修改头像"
        android:textColor="#ABAFB4"
        android:textSize="@dimen/text_size_12"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x22"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/male_user_info_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x8"
            android:text="男"
            />
        <com.lefuyun.widget.togglebutton.ToggleButton 
			android:id="@+id/togglebutton_user_info_activity"
			android:layout_width="@dimen/x42"
			android:layout_height="@dimen/x22"
			lefu:onColor="#FA4E62"
			lefu:offColor="@color/main_background"
			lefu:spotColor="@color/white"
			lefu:offBorderColor="@color/main_background"
			lefu:borderWidth="@dimen/x1"
			/>
        <TextView 
            android:id="@+id/female_user_info_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x8"
            android:text="女"
            />
    </LinearLayout>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x26"
        android:text="姓名"
        android:textSize="@dimen/text_size_14"
        />
    
    <EditText 
        android:id="@+id/name_user_info_activity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x44"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x12"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:paddingTop="@dimen/x6"
        android:paddingBottom="@dimen/x6"
        android:gravity="center"
        android:background="#F4F4F4"
        android:hint="请输入姓名"
        android:textColorHint="#CCCCD0"
        android:textSize="@dimen/text_size_14"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x12"
        android:text="出生日期"
        android:textSize="@dimen/text_size_14"
        />
    
    <TextView 
        android:id="@+id/date_user_info_activity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x44"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x12"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:paddingTop="@dimen/x6"
        android:hint="请输入出生日期"
        android:textColorHint="#CCCCD0"
        android:paddingBottom="@dimen/x6"
        android:gravity="center"
        android:background="#F4F4F4"
        android:textSize="@dimen/text_size_14"
        />
    <TextView 
        android:id="@+id/update_user_info_activity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x44"
        android:layout_marginTop="@dimen/x46"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:gravity="center"
        android:background="@drawable/selector_button_radius_maincolor_gray"
        android:text="修改"
        android:textColor="@color/selector_button_text_white_maincolor"
        android:textSize="@dimen/text_size_18"
        />
    
</LinearLayout>
