<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lefu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x63"
        android:layout_gravity="center_horizontal"
        android:text="乐福健康"
        android:textSize="@dimen/text_size_48"
        android:textColor="@color/main_text"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="l e f u  h e a l t h"
        android:textSize="@dimen/text_size_13"
        android:textColor="#d4d4d4"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/x44"
        android:layout_marginTop="@dimen/x62"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:background="#F4F4F4"
        android:orientation="horizontal"
        >
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/x15"
	        android:layout_gravity="center_vertical"
	        android:text="+86"
	        android:textSize="@dimen/text_size_14"
	        android:textColor="@color/main_text"
	        />
        
        <View 
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:layout_marginLeft="@dimen/x9"
            />
        
        <EditText 
            android:id="@+id/phone_register_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入您的手机号"
            android:inputType="phone"
            android:background="@null"
            android:layout_marginLeft="@dimen/x9"
            android:textColorHint="#CCCCD0"
            android:textColor="@color/main_text"
            android:textSize="@dimen/text_size_14"
            android:maxLength="13"
            />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x44"
        android:layout_marginTop="@dimen/x11"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:orientation="horizontal"
        >
        <EditText 
	        android:id="@+id/verify_code_regidter_activity"
		    android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:inputType="number"
	        android:paddingLeft="@dimen/x21"
	        android:background="#F4F4F4"
		    android:hint="请输入验证码"
		    android:textColorHint="#CCCCD0"
		    android:textColor="@color/main_text"
		    android:textSize="@dimen/text_size_14"
		    />
        
        <TextView 
            android:id="@+id/send_verify_code_register_activity"
            android:layout_width="@dimen/x100"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x4"
            android:paddingLeft="@dimen/x8"
            android:paddingRight="@dimen/x8"
            android:background="@drawable/selector_button_gray_maincolor"
            android:text="获取验证码"
            android:textColor="@color/selector_button_text_maincolor_white"
		    android:textSize="@dimen/text_size_14"
            />
            
        
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x44"
        android:layout_marginTop="@dimen/x11"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        >
        
        <EditText 
	        android:id="@+id/password_regidter_activity"
		    android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:inputType="textPassword"
	        android:paddingLeft="@dimen/x21"
	        android:background="#F4F4F4"
		    android:hint="设置账户密码"
		    android:textColorHint="#CCCCD0"
		    android:textColor="@color/main_text"
		    android:textSize="@dimen/text_size_14"
		    />
        
        <com.lefuyun.widget.togglebutton.ToggleButton 
            android:id="@+id/togglebutton_regidter_activity"
            android:layout_width="@dimen/x42"
	        android:layout_height="@dimen/x22"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="@dimen/x20"
	        lefu:onColor="@color/main_background"
	        lefu:offColor="@color/white"
	        lefu:spotColor="@color/white"
	        lefu:offBorderColor="#E4E4E4"
	       	lefu:borderWidth="1px"
            />
        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x22"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/accept_tick"
            android:text="注册代表同意"
            android:textSize="@dimen/text_size_14"
            android:textColor="#9b9b9b"
            />
        <TextView 
            android:id="@+id/user_protocol_register_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户服务协议》"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/main_text"
            android:clickable="true"
            />
    </LinearLayout>
    
    <TextView 
        android:id="@+id/confirm_register_activity"
	    android:layout_width="match_parent"
        android:layout_height="@dimen/x44"
        android:layout_marginTop="@dimen/x12"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:gravity="center"
        android:background="@drawable/selector_button_radius_maincolor_gray"
	    android:text="注册"
	    android:textColor="@color/selector_button_text_white_maincolor"
	    android:textSize="@dimen/text_size_18"
	    />
</LinearLayout>