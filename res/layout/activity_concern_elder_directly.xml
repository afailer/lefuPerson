<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <View
            android:id="@+id/item_concern_elder_directly"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/x28" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/x44"
            android:layout_marginBottom="@dimen/x29"
            android:layout_marginLeft="@dimen/x14"
            android:layout_marginRight="@dimen/x14" >

            <LinearLayout
                android:id="@+id/before_explore_concern_elder_directly"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/id_concern_elder_directly"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#f4f4f4"
                    android:gravity="center"
                    android:hint="请输入老人身份证号"
                    android:paddingBottom="@dimen/x13"
                    android:paddingTop="@dimen/x13"
                    android:maxLength="18"
                    android:textColor="@color/main_text"
                    android:textColorHint="#CCCCD0"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/explore_concern_elder_directly"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/x5"
                    android:background="@drawable/selector_button_maincolor_gray"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x25"
                    android:paddingRight="@dimen/x25"
                    android:text="搜索"
                    android:textColor="@color/selector_button_text_white_maincolor"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/success_explore_concern_elder_directly"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/name_elder_concern_elder_directly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/normal_string"
                    android:textSize="@dimen/text_size_17" />

                <TextView
                    android:id="@+id/id_success_concern_elder_directly"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_weight="1"
                    android:text="11038858586954030320202"
                    android:textColor="@color/main_text"
                    android:textSize="@dimen/text_size_17" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x23"
            android:text="请输入登记的家属信息或本人信息"
            android:textColor="#323b46"
            android:textSize="@dimen/text_size_11" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/x44"
            android:layout_marginLeft="@dimen/x23"
            android:layout_marginTop="@dimen/x13"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名:"
                android:textSize="@dimen/text_size_15" />

            <EditText
                android:id="@+id/name_concern_elder_directly"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x12"
                android:layout_weight="1"
                android:background="@null"
                android:hint=""
                android:textColor="#646D75"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:background="#AAAAAA" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/x44"
            android:layout_marginLeft="@dimen/x23"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话:"
                android:textSize="@dimen/text_size_15" />

            <EditText
                android:id="@+id/phone_concern_elder_directly"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x12"
                android:layout_weight="1"
                android:background="@null"
                android:maxLength="13"
                android:inputType="phone"
                android:textColor="#646D75"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:background="#AAAAAA" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_concern_elder_directly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x120"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:layout_marginTop="@dimen/x36"
        android:background="@drawable/selector_button_radius_maincolor_gray"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/x9"
        android:paddingTop="@dimen/x9"
        android:text="添加关注"
        android:textColor="@color/selector_button_text_white_maincolor"
        android:textSize="@dimen/text_size_18" />

</LinearLayout>