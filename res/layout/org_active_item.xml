<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
       android:background="@drawable/selector_item_listview"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >
    <ImageView 
        android:id="@+id/org_item_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/org_active_margin"
        android:src="@drawable/no_data_pic"
        />
	<TextView 
	    android:id="@+id/org_item_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#333333"
	    android:textSize="@dimen/text_size_normal"
	    android:layout_marginTop="@dimen/org_active_margin"
	    android:layout_toRightOf="@id/org_item_pic"
	    />
	<TextView 
	    android:id="@+id/org_item_content"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/org_item_pic"
	    android:layout_below="@id/org_item_title"
	    android:textColor="@color/gray"
	    android:maxLines="2"
	    android:layout_marginRight="5dp"
	    android:layout_marginTop="5dp"
	    />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/org_item_pic"
	    android:layout_below="@id/org_item_content"
	    android:layout_marginTop="@dimen/org_item_margin"
	    android:layout_marginLeft="@dimen/org_active_margin"
	    >
	    <ImageView 
		    android:id="@+id/click_heart"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/heart_red"
		    android:layout_centerVertical="true"
	    />
	    <TextView 
		    android:id="@+id/click_num"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@id/click_heart"
		    android:text="120"
		    android:layout_marginLeft="5dp"
		    android:textColor="@color/gray"
		    android:layout_centerVertical="true"
	    />
	    <ImageView 
	        android:id="@+id/read_pic"
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@id/click_num"
		    android:layout_centerVertical="true"
		    android:src="@drawable/read"
		    android:layout_marginLeft="25dp"
	        />
	    <TextView 
	        android:id="@+id/read_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/read_pic"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="5dp"
	        android:textColor="@color/gray"
	        android:text="22"
	        />
	</RelativeLayout>
	
	
</RelativeLayout>
