<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lefu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/bed_total_pop_window_explore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x8"
        android:gravity="center_horizontal"
        android:text="按床位数排序"
        android:textColor="#C7C7CD"
        android:textSize="@dimen/text_size_15"
        />
    <TextView 
        android:id="@+id/char_pop_window_explore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x8"
        android:gravity="center_horizontal"
        android:text="按字母排序"
        android:textColor="@color/main_text"
        android:textSize="@dimen/text_size_15"
        />
    <TextView 
        android:id="@+id/bed_surplus_pop_window_explore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x8"
        android:gravity="center_horizontal"
        android:text="按可用床位数排序"
        android:textColor="#C7C7CD"
        android:textSize="@dimen/text_size_15"
        />

</LinearLayout>