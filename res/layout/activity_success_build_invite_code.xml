<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x46"
        android:drawablePadding="@dimen/x26"
        android:drawableBottom="@drawable/success_tick"
        android:text="已生成邀请码"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/main_text"
        />
    
    <TextView 
        android:id="@+id/code_success_build_invite_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x66"
        android:text="wdawdwa"
        android:textSize="@dimen/text_size_48"
        android:textColor="@color/main_text"
        />
    
    <TextView 
        android:id="@+id/copy_success_build_invite_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x70"
        android:paddingTop="@dimen/x2"
        android:paddingBottom="@dimen/x2"
        android:paddingRight="@dimen/x16"
        android:paddingLeft="@dimen/x16"
        android:background="@drawable/selector_button_radius_gray_maincolor"
        android:text="复制"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/selector_button_text_maincolor_white"
        />
    
    <TextView
        android:id="@+id/btn_success_build_invite_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:layout_marginTop="@dimen/x74"
        android:background="@drawable/selector_button_radius_maincolor_gray"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/x9"
        android:paddingTop="@dimen/x9"
        android:text="前往邀请"
        android:textColor="@color/selector_button_text_white_maincolor"
        android:textSize="@dimen/text_size_18" />
    

</LinearLayout>
