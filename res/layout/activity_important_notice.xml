<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
     >
    
    <RelativeLayout 
        android:id="@+id/refresh_parent"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_marginTop="-60dp"
        android:layout_gravity="center_horizontal"
        >
        <com.lefuyun.widget.CircleWaveView
            android:id="@+id/circle"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:layout_centerInParent="true"
            ></com.lefuyun.widget.CircleWaveView>
        <ImageView 
            android:id="@+id/refresh_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/important_notice_normal"
            />
         </RelativeLayout>
        
         <LinearLayout 
             android:id="@+id/old_container"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginBottom="220dp"
	        android:layout_alignParentBottom="true"
        >
        <TextView 
            android:id="@+id/important_old_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/main_background"
            android:textSize="@dimen/x20"
            />
    <TextView 
        android:id="@+id/important_old_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/x12"
        android:textColor="@color/gray"
        android:layout_marginTop="@dimen/x10"
        />
    <TextView 
        android:id="@+id/important_old_age"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:paddingLeft="6dp"
      	android:paddingRight="6dp"
      	android:paddingTop="3dp"
      	android:paddingBottom="3dp"
      	android:layout_marginTop="@dimen/x18"
      	android:textColor="@color/white"
      	android:background="@drawable/shape_main_color_big_circular"
      	android:textSize="@dimen/x12"
      	android:layout_gravity="center_horizontal"
       />
    </LinearLayout>
   	
         
         
         
           <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="98dp"
        android:drawablePadding="50dp"
        android:background="@drawable/shape_border_stroke"
        >
    
    <com.lefuyun.widget.viewpager.VerticalViewPager
        android:id="@+id/importantPager"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:padding="10dp" />

    <TextView 
        android:id="@+id/important_nodata"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:textColor="@color/gray"
        android:padding="10dp"
        />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/notice_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_button_radius_maincolor_gray"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        >
    
        <TextView 
            android:id="@+id/notice_detail"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="@drawable/selector_button_radius_maincolor_gray"
        	android:text="通知详情"
        	android:textSize="@dimen/text_size_18"
        	android:layout_centerHorizontal="true"
        	android:textColor="@color/selector_button_text_white_maincolor"
        />
        </RelativeLayout>
</RelativeLayout>