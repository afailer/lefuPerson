<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lefu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!-- 导航标题栏 -->
	    <com.lefuyun.widget.PagerSlidingTabStrip
	        android:id="@+id/pager_tabstrip_explore_fragment"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/white"
	        lefu:allowWidthFull="true"
	        lefu:slidingBlock="@drawable/image_sliding_block_half" >
	    </com.lefuyun.widget.PagerSlidingTabStrip>
        
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/apostrophe_hollow"
	        android:contentDescription="@string/normal_picture_string"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="@dimen/x12"
	        />
	    
    </RelativeLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/pager_explore_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </android.support.v4.view.ViewPager>
</LinearLayout>
